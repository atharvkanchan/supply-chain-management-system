import streamlit as st
import pandas as pd
import numpy as np

st.title("ğŸ“Š Dataset Overview")

if "df" not in st.session_state:
    st.error("Please upload a dataset from the Home page.")
    st.stop()

df = st.session_state["df"]

st.subheader("ğŸ“ Dataset Preview")
st.dataframe(df.head(), use_container_width=True)

st.subheader("ğŸ“Š Dataset Information")

col1, col2, col3 = st.columns(3)

col1.metric("Rows", len(df))
col2.metric("Columns", len(df.columns))
col3.metric("Numeric Columns", len(df.select_dtypes(include=[np.number]).columns))

st.subheader("ğŸ“ˆ Descriptive Statistics")
st.write(df.describe())

st.subheader("ğŸ§± Missing Values")
st.write(df.isnull().sum())
